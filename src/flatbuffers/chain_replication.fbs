table chain_put {
  chain:       [uint];
  chain_index: uint = 0;
  put: smf.wal.tx_put_request;
}

rpc_service chain_replication {
  put(chain_put): smf.wal.tx_put_reply;
  get(smf.wal.tx_get_request): smf.wal.tx_get_reply;
}
